<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Direction" parent="AppTheme">
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="TodayInfoTitle" parent="@style/AppTheme">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="fontFamily">@font/iran_sans_bold</item>
    </style>
    <style name="TodayInfoValueTheme" parent="@style/AppTheme">
        <item name="android:textColor">@color/text_color_results</item>
        <item name="fontFamily">@font/iran_sans_bold</item>
    </style>

</resources>
